= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :show_name
    = f.text_field :show_name
  .field
    = f.label :imdb_link
    = f.text_field :imdb_link
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :wall
    = f.text_field :wall
  .actions
    = f.submit 'Save'
